<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<RelativeLayout
    android:id="@+id/profile_pic_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/prof_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Name"
        android:textColor="#130110"
        android:textSize="6pt"
        android:layout_centerHorizontal="true"
        />

        <ImageView
            android:id="@+id/card_pic"
            android:src="@drawable/album7"
            android:layout_height="@dimen/item_pic_height"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/item_pic_width"
            android:padding="3dp"
            android:layout_below="@+id/prof_name"
            android:layout_margin="2dp"
             />

</RelativeLayout>

<LinearLayout
    android:layout_gravity="right"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/product_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            >
            <TextView
                android:id="@+id/txtName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textAlignment="center"
                android:clickable="true"
                android:textStyle="bold"
                android:textSize="6pt"
                android:padding="3dp"
                android:text="Name of Product"
                />
            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:clickable="true"
                android:padding="5dp"
                android:text="Location"
                android:textColor="@color/bkg_card"
                android:textSize="6pt"
                android:textAlignment="center"
                android:layout_below="@+id/txtName"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@id/product_info_container"
            android:id="@+id/products_pic_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/small_item_pic1"
                android:src="@drawable/album1"
                android:layout_height="@dimen/small_items_height"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/small_items_width"
                android:padding="3dp"
                android:layout_margin="2dp"
                />
            <ImageView
                android:id="@+id/small_item_pic2"
                android:src="@drawable/album2"
                android:layout_height="@dimen/small_items_height"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/small_items_width"
                android:padding="3dp"
                android:layout_margin="2dp"
                android:layout_toLeftOf="@+id/small_item_pic1"
                />
            <ImageView
                android:id="@+id/small_item_pic3"
                android:src="@drawable/album3"
                android:layout_height="@dimen/small_items_height"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/small_items_width"
                android:padding="3dp"
                android:layout_margin="2dp"
                android:layout_toLeftOf="@+id/small_item_pic2"

                />

        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dis_categories"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:text="Categories"
            android:textColor="#cf2fb5"
            android:textSize="4pt"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>